{
    "name": "nebalus/webbackend",
    "description": "The web backend for 'https://api.nebalus.dev'",
    "license": "MIT",
    "type": "project",
    "keywords": [
        "web",
        "api",
        "rest-api",
        "mysql",
        "redis",
        "rest",
        "slim"
    ],

    "authors": [
        {
            "name": "Nebalus",
            "email": "coding@nebalus.dev"
        }
    ],
    
    "autoload": {
        "psr-4": {
            "Nebalus\\Webapi\\": "src/"
        }
    },
    
    "require": {
        "php": "^8.3",
        "ext-pdo": "*",
        "ext-redis": "*",
        "php-di/php-di": "^7.0",
        "monolog/monolog": "^3.5",
        "slim/slim": "4.*",
        "slim/psr7": "^1.6",
        "slim/http": "^1.4",
        "guzzlehttp/guzzle": "^7.8",
        "rbdwllr/reallysimplejwt": "^5.0",
        "spomky-labs/otphp": "^11.3.0",
        "promphp/prometheus_client_php": "^2.12",
        "elasticsearch/elasticsearch": "^9.0",
        "latitude/latitude": "^4.2",
        "nebalus/sanitizr": "dev-dev"
    },
    
    "autoload-dev": {
        "psr-4": {
            "UnitTesting\\": "tests/"
        }
    },
    
    "require-dev": {
        "phpmd/phpmd": "^2.15",
        "squizlabs/php_codesniffer": "^3.9",
        "phpunit/phpunit": "^12.0"
    },

    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
